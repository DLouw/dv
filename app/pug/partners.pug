        .container
          .row
            .col-md-4.mt-3
             img.partner-logo(src='img/sap_silver_partner.svg', alt='')
            .col-md-4.mt-3
             img.partner-logo(src='img/sap_silver_partner.svg', alt='')
            .col-md-4.mt-3
             img.partner-logo(src='img/sap_silver_partner.svg', alt='')
