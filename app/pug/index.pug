    link(href='css/stylesheet.min.css', rel='stylesheet')
    //Favicon
    link(rel="icon", href="img/favicon.png")
  body.no-scroll#page-top(onload="splash(30)")
    // Splash screen
    #splash.splash.centre-xy
        .wrapper
            img#anim0(src="img/anim/0.svg")
            img#anim1.anim(src="img/anim/1.svg")
            img#anim2.anim(src="img/anim/2.svg")
            img#anim3.anim(src="img/anim/3.svg")
            img#anim4.anim(src="img/anim/4.svg")
            img#anim5.anim(src="img/anim/5.svg")
    // Navigation
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='#page-top') 
            img.icon(src="img/logorow.svg")
        button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          i.fa.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#whyus') Why Digivate
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#bizone') Learn more
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#contact') Contact
    header.masthead
      .container.h-100
        .row.h-100
          .col-lg-7.my-auto
            .header-content.mx-auto
              h1.mb-5.text-dark
                | Helping businesses grow with innovative digital solutions
              a.btn.btn-outline.btn-xl.js-scroll-trigger(href='#features') Ask us how
          //.col-lg-5.my-auto
            .device-container
              .device-mockup.iphone6_plus.portrait.white
                .device
                  .screen
                    // Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else!
                    img.img-fluid(src='img/demo-screen-1.jpg', alt='')
                  .button
                    // You can hook the "home button" to some JavaScript events or just remove it
    section#whyus.whyus.bg-primary.text-center
      .container
        .row
          .col-md-8.mx-auto
            h2.section-heading.twn1 Partner your business with global industry leaders
             //p 
            p.tween Digivate is an official SAP partner
            .badges.mt-5.twn1b
              a.badge-link.twn2(href='#')
                img(src='img/sap_silver_partner.svg', alt='')
    section#features.features
      .container
        .section-heading.text-center
          h2.twn1 What digivate can do for you
          p.text-muted An agile partner for sustainable growth
          hr
        .row
          .col-lg-4.centre-xy
            img.feature-logo.mb-5(src="img/logo.svg")
          .col-lg-8.my-auto
            .container-fluid
              .row.row1
                .col-lg-6
                  .feature-item
                    i.icon-pie-chart.text-primary
                    h3 Integrated systems
                    p.text-muted.twn2 We help SMEs put the right business systems in place to thrive in local and global markets
                .col-lg-6
                  .feature-item
                    i.icon-equalizer.text-primary
                    h3 Bespoke solutions
                    p.text-muted.twn2 Customized, installed and integrated. We tailor solutions to your business environment
              .row.row2
                .col-lg-6
                  .feature-item
                    i.icon-graph.text-primary
                    h3 Expert consultants
                    p.text-muted.twn2 With over 10 years of experience our consultants are intimately familiar with the challenges SMEs face
                .col-lg-6
                  .feature-item
                    i.icon-refresh.text-primary
                    h3 Continued support
                    p.text-muted Digivate is a holistic partner for success- guiding you on the entire journey
    section#bizone.bizone
        .wrapper
          //iframe(src="https://www.youtube.com/embed/CHe6LLvkDnY?rel=0&autoplay=1&mute=1&showinfo=0&controls=0&loop=1", frameborder="0",  allowfullscreen)
          .overlay.centre-xy  
            .overlay-text
              h2
                | Modern business? Solved.
                br
                | With SAP Business One
              a.btn.btn-outline.btn-xl.js-scroll-trigger(href='https://www.sap.com/africa/products/business-one/features.html', target='_blank') Learn more
    section#contact.contact.bg-primary
        .container
            .row
                .col-md-4.mb-5
                    a#mailshow.service(href="",onclick="event.preventDefault();")
                        i.icon.icon-bulb
                    h3 Send a message
                    a#mailaddress(href="") [click the bulb for email address]
                .col-md-4.mb-5
                    a
                        i.icon.icon-phone
                    h3 Give us a call
                    a 082 905 8222
                .col-md-4
                    a.js-scroll-trigger.text-dark(href="#page-top")
                        i.icon.icon-arrow-up
                    h3 Back to top
